{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "^1.5",
        "api-platform/api-pack": "^1.1",
        "easycorp/easyadmin-bundle": "^2.0",
        "lexik/jwt-authentication-bundle": "^2.6",
        "sensio/framework-extra-bundle": "^5.2",
        "symfony/apache-pack": "^1.0",
        "symfony/console": "4.2.*",
        "symfony/dotenv": "4.2.*",
        "symfony/flex": "^1.1",
        "symfony/form": "4.2.*",
        "symfony/framework-bundle": "4.2.*",
        "symfony/orm-pack": "^1.0",
        "symfony/security-csrf": "4.2.*",
        "symfony/serializer-pack": "^1.0",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/twig-bundle": "4.2.*",
        "symfony/validator": "4.2.*",
        "symfony/yaml": "4.2.*",
        "vich/uploader-bundle": "^1.8"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Core\\": "src/",
            "Checklist\\": "plugins/checklist/api/",
            "Reference\\": "plugins/reference/api/",
            "Collection\\": "plugins/collection/api/",
            "CrowdSource\\": "plugins/crowdSource/api/",
            "Exsiccati\\": "plugins/exsiccati/api/",
            "Glossary\\": "plugins/glossary/api/",
            "ImageProcessor\\": "plugins/imageProcessor/api/",
            "Key\\": "plugins/key/api/",
            "Media\\": "plugins/media/api/",
            "Occurrence\\": "plugins/occurrence/api/",
            "OccurrenceAssociation\\": "plugins/occurrenceAssociation/api/",
            "OccurrenceComment\\": "plugins/occurrenceComment/api/",
            "OccurrenceDataset\\": "plugins/occurrenceDataset/api/",
            "OccurrenceGenetic\\": "plugins/occurrenceGenetic/api/",
            "OccurrenceLoan\\": "plugins/occurrenceLoan/api/",
            "Taxa\\": "plugins/taxa/api/",
            "Traits\\": "plugins/traits/api/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "pre-update-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.dist', '.env');\"",
            "@php -r \"file_exists('docker-compose.yml') || copy('docker-compose.yml.dist', 'docker-compose.yml');\"",
            "@php -r \"file_exists('docker-compose-elk.yml') || copy('docker-compose-elk.yml.dist', 'docker-compose-elk.yml');\""
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "4.2.*"
        }
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "fzaninotto/faker": "^1.8",
        "symfony/maker-bundle": "^1.10"
    }
}
